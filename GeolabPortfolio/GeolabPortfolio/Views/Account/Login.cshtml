
@{
    ViewBag.Title = "Login";
    Layout = null;
}

@using GeolabPortfolio.ViewModels;
@model UserLoginViewModel

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>ავტორიზაცია</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/login.css" />

    <style>
        .field-validation-error {
            color: #e80c4d;
            font-weight: bold;
        }

        .field-validation-valid {
            display: none;
        }

        input.input-validation-error {
            border: 1px solid #e80c4d;
        }

        input[type="checkbox"].input-validation-error {
            border: 0 none;
        }

        .validation-summary-errors {
            color: #e80c4d;
            font-weight: bold;
            font-size: 1.1em;
        }

        .validation-summary-valid {
            display: none;
        }
    </style>

</head>
<body>
    <div class="wrapper">
        <form class="form-signin" method="post">
            <h2 class="form-signin-heading">ავტორიზაცია</h2>

            @if (!ViewData.ModelState.IsValid)
            {
                @Html.ValidationSummary("", new { @class = "alert alert-danger" })
            }

            <input type="text" class="form-control" name="Email" placeholder="ელ-ფოსტა" value="@Model.Email" />
            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })

            <input type="password" class="form-control" name="Password" placeholder="პაროლი" value="@Model.Password" style="margin-bottom:5px;" />
            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })

            <button class="btn btn-lg btn-primary btn-block" type="submit" style="margin-top:15px;">შესვლა</button>
        </form>
    </div>
</body>
</html>