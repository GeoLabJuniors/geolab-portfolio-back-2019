@{
    Layout = null;
}

@using GeolabPortfolio.ViewModels;
@model HomeProjectDetailsViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Geolab Portfolio</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="Portfolio of Geolab team">
    <meta name="keywords" content="პორტფოლიო, ჯეოლაბი, ფრილანსერი, დიზაინერი, პროგრამისტი, portfolio, geolab">
    <meta name='author' content='Anano Aspanidze (მელა) - anano.aspanidze@geolab.edu.ge'>
    <link rel="icon" href="~/Content/img/logo.ico">



    <!-- fb og tags  -->
    <meta property="og:title" content="ჯეოლაბი პორტფოლიო" />
    <meta property="og:description" content="ვებგვერდი, რომელიც აერთიანებს ჯეოლაბელების პორტფოლიოებს." />
    <!-- <meta property="fb:app_id" content="" />-->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://portfolio.geolab.edu.ge/" />
    <meta property="og:image" content="http://portfolio.geolab.edu.ge/images/logo.png" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jssor.slider-27.5.0.min.js" type="text/javascript"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jssor-slider/27.5.0/jssor.slider.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/Content/css/style.css">

</head>
<body class="fluid-container">
    <header class="navbar container ">
        <nav>
            <a href="/" class="navbar-brand">
                <img src="~/Content/img/geolab-logo.svg" alt="geolab-logo">
            </a>
            <ul class="list-inline navbar-right">

                <li class="about"><a href="about.html">About the Project</a></li>
                <button type="button" class="close close-search-div">×</button>
                <li class="search" id="search"><img src="~/Content/img/searchIcon.svg" alt="search"></li>
            </ul>
        </nav>
    </header>

    <div class="search-div" id="searchdiv" style="display: none;">
        <div class="container">
            <input type="text border" placeholder="search" class="search-input">
            <!-- <div class="border"></div> -->
            <div class="navbar-right">
                <img src="~/Content/img/searchIcon.svg" alt="search">
            </div>
        </div>

    </div>

    <section class="personal">
        <div class="container">
            <div class="personal-information">
                <div class="img-wrapper rounded-circle personal-img" style="border-radius: 50%; background-image: url(/Content/Uploads/@Model.author.Image);">
                    <img src="~/Content/Uploads/@Model.author.Image" style="width: 100%;visibility: hidden;">
                </div>
                <h1 class="personal-name" style="text-align:left;">@Model.author.FirstName @Model.author.LastName</h1>
            </div>

            <!--author social links-->
            <div class="social-icon navbar-right nonfloat">
                @if (Model.author.LinkedinLink != null)
                {
                    <a href="@Model.author.LinkedinLink" target="_blank">
                        <i class="fab fa-linkedin icon3"></i>
                    </a>
                }

                @if (Model.author.GithubLink != null)
                {
                    <a href="@Model.author.GithubLink" target="_blank">
                        <i class="fab fa-github icon3"></i>
                    </a>
                }

                @if (Model.author.BehanceLink != null)
                {
                    <a href="@Model.author.BehanceLink" target="_blank">
                        <i class="fab fa-behance icon3"></i>
                    </a>
                }

                @if (Model.author.DribbleLink != null)
                {
                    <a href="@Model.author.DribbleLink" target="_blank">
                        <i class="fab fa-dribbble icon3"></i>
                    </a>
                }
            </div>
        </div>
    </section>

    <section class="container">
        <div class="alltag01">
            @foreach (var tag in Model.Tags)
            {
                <div style="display:inline-block!important;">
                    <p>#@tag</p>
                </div>
            }
        </div>
    </section>


    <section class="container">
        <div class="col-lg-12">
            <h1 class="project-name">@Model.project.Name</h1>
            <div class="img-wrapper " style="background-image: url(/Content/Uploads/@Model.MainImage);">
                <img src="~/Content/Uploads/@Model.MainImage" class="project-photo">
            </div>
        </div>
    </section>

    <div class="project-about">
        <div class="container">
            <p>@Html.Raw(@Model.project.Description)</p>
        </div>
    </div>


    <div class="slider container" id="slide-show">
        @foreach (var image in Model.Images)
        {
            <div class="col-lg-6" style="margin-bottom: 30px;">
                <div class="img-wrapper img-container" style="background-image: url(/Content/Uploads/@image)">
                    <img src="~/Content/Uploads/@image" class="img-size01">
                </div>
            </div>
        }
    </div>


    <div style=" padding: 30px 0px;" class="hide-slider">
        <div class="container">
            <div id="jssor_1" style="position:relative;margin:0 auto;top:0px;left:0px;width:600px;height:500px;overflow:hidden;visibility:hidden;">
                <!-- Loading Screen -->
                <div data-u="loading" class="jssorl-009-spin" style="position:absolute;top:0px;left:0px;width:100%;height:100%;text-align:center;background-color:rgba(0,0,0,0.7);">
                    <img style="margin-top:-19px;position:relative;top:50%;width:38px;height:38px;" src="img/spin.svg" />
                </div>

                <div data-u="slides" style="cursor:default;position:relative;top:0px;left:0px;width:600px;height:500px;overflow:hidden;">
                    @foreach (var image in Model.Images)
                    {
                        <div class="img-wrapper">
                            <img data-u="image" src="~/Content/Uploads/@image" />
                        </div>
                    }
                </div>

                <!-- Bullet Navigator -->
                <!--<div data-u="navigator" class="jssorb072" style="position:absolute;bottom:12px;right:12px;" data-autocenter="1" data-scale="0.5" data-scale-bottom="0.75">
                    <div data-u="prototype" class="i" style="width:24px;height:24px;font-size:12px;line-height:24px;">
                        <svg viewbox="0 0 16000 16000" style="position:absolute;top:0;left:0;width:100%;height:100%;z-index:-1;">
                            <circle class="b" cx="8000" cy="8000" r="6666.7"></circle>
                        </svg>
                        <div data-u="numbertemplate" class="n"></div>
                    </div>
                </div>-->
                <!-- Arrow Navigator -->
                <div data-u="arrowleft" class="jssora073" style="width:40px;height:50px;top:0px;left:30px;" data-autocenter="2" data-scale="0.75" data-scale-left="0.75">
                    <svg viewbox="0 0 16000 16000" style="position:absolute;top:0;left:0;width:100%;height:100%;">
                        <path class="a" d="M4037.7,8357.3l5891.8,5891.8c100.6,100.6,219.7,150.9,357.3,150.9s256.7-50.3,357.3-150.9 l1318.1-1318.1c100.6-100.6,150.9-219.7,150.9-357.3c0-137.6-50.3-256.7-150.9-357.3L7745.9,8000l4216.4-4216.4 c100.6-100.6,150.9-219.7,150.9-357.3c0-137.6-50.3-256.7-150.9-357.3l-1318.1-1318.1c-100.6-100.6-219.7-150.9-357.3-150.9 s-256.7,50.3-357.3,150.9L4037.7,7642.7c-100.6,100.6-150.9,219.7-150.9,357.3C3886.8,8137.6,3937.1,8256.7,4037.7,8357.3 L4037.7,8357.3z"></path>
                    </svg>
                </div>
                <div data-u="arrowright" class="jssora073" style="width:40px;height:50px;top:0px;right:30px;" data-autocenter="2" data-scale="0.75" data-scale-right="0.75">
                    <svg viewbox="0 0 16000 16000" style="position:absolute;top:0;left:0;width:100%;height:100%;">
                        <path class="a" d="M11962.3,8357.3l-5891.8,5891.8c-100.6,100.6-219.7,150.9-357.3,150.9s-256.7-50.3-357.3-150.9 L4037.7,12931c-100.6-100.6-150.9-219.7-150.9-357.3c0-137.6,50.3-256.7,150.9-357.3L8254.1,8000L4037.7,3783.6 c-100.6-100.6-150.9-219.7-150.9-357.3c0-137.6,50.3-256.7,150.9-357.3l1318.1-1318.1c100.6-100.6,219.7-150.9,357.3-150.9 s256.7,50.3,357.3,150.9l5891.8,5891.8c100.6,100.6,150.9,219.7,150.9,357.3C12113.2,8137.6,12062.9,8256.7,11962.3,8357.3 L11962.3,8357.3z"></path>
                    </svg>
                </div>

            </div>
        </div>
    </div>


    <footer>
        <div class="container responsive">
            <div class="navbar-right">
                <div class=" glyphicon1">
                    <a href="#">
                        <span class="glyphicon glyphicon-earphone glyphicon-style" aria-hidden="true"></span>
                    </a>
                    <p>(032) 2 00 00 00</p>
                </div>
                <div class="glyphicon2">
                    <a href="#">
                        <span class="glyphicon glyphicon-envelope glyphicon-style"></span>
                    </a>
                    <p>info@geolab.edu.ge</p>
                </div>
                <div class="glyphicon3">
                    <a href="#">
                        <span class="glyphicon glyphicon-map-marker glyphicon-style" aria-hidden="true"></span>
                    </a>
                </div>
                <div class="glyphicon3">
                    <a href="https://www.facebook.com/GeoLabEdu/">
                        <span class="fab fa-facebook glyphicon-style"></span>
                    </a>
                </div>

            </div>
        </div>
    </footer>

    <script src="~/Scripts/index.js"></script>
    
</body>
</html>
