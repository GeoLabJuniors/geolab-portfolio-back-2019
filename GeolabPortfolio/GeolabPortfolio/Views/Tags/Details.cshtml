
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@model GeolabPortfolio.ViewModels.EditTagViewModel

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        თეგი
    </div>
    <div class="card-body">
        <div class="col-md-4">
            <form action="~/Tags/Details" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="form-group">
                    <label>სახელი</label>
                    <input type="text" name="Name" class="form-control" value="@Model.Name"/>
                    @Html.ValidationMessageFor(x=>x.Name,"", new { @class = "text-danger" })
                </div>
                <div class="form-group btn-group-sm">
                    <button class="btn btn-success" type="submit">
                        <i class="fas fa-save fa-sm fa-fw mr-2 text-gray-400"></i>
                        შენახვა
                    </button>
                    <a class="btn btn-danger" href="#" data-toggle="modal" data-target="#DeleteModal">
                        <i class="fas fa-trash fa-sm fa-fw mr-2 text-gray-400"></i>
                        წაშლა
                    </a>
                </div>
            </form>
        </div>
        
    </div>
</div>

<!--Remove Tag Modal-->
<div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">წაშლა</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">დარწმუნებული ხართ, რომ გსურთ თეგის წაშლა?</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">არა</button>
                <a class="btn btn-primary" href="~/Tags/Remove/@Model.Id">დიახ</a>
            </div>
        </div>
    </div>
</div>
