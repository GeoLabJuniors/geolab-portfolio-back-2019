
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@using GeolabPortfolio.ViewModels
@using GeolabPortfolio.Models;

@model CreateProjectViewModel

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        ახალი პროექტი
    </div>
    <div class="card-body">
        <div class="col-md-12">
            <form action="~/Project/Create" method="post" enctype="multipart/form-data">
                @Html.ValidationSummary()

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="inputEmail4">ავტორი</label>
                        <select class="form-control" name="AuthorId">
                            @foreach (var author in Model.Authors)
                            {
                                <option value="@author.Id">@author.FirstName @author.LastName</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(x => x.AuthorId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">სახელი</label>
                        <input type="text" class="form-control" name="Name" placeholder="სახელი" value="@Model.Name">
                        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">თარიღი</label>
                        <input id="datepicker" class="form-control" name="Published" value="@Model.Published.ToShortDateString()" />
                        @Html.ValidationMessageFor(x => x.Published, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="inputEmail4">აღწერა</label>
                        <textarea class="form-control" name="Description" id="editor">@Model.Description</textarea>
                        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="inputEmail4">თეგები</label>
                    </div>
                    @foreach (Tag tag in Model.Tags)
                    {
                        <div class="form-group col-md-3">
                            <label><input type="checkbox" name="TagIds[]" value="@tag.Id"> @tag.Name</label>
                        </div>
                    }
                </div>

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <button type="button" class="btn btn-info btn-sm" onclick="newImageButtonHandler()">ახალი სურათი</button>
                    </div>
                </div>

                <div id="images">
                    @Html.ValidationMessageFor(x => x.Photos, "", new { @class = "text-danger" })
                </div>

                <div class="form-group btn-group-sm">
                    <input type="submit" class="btn btn-success" value="შენახვა" />
                </div>
            </form>
        </div>

    </div>
</div>

<!--time picker library -->
<script type="text/javascript" src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/gijgo.min.js" type="text/javascript"></script>
<link href="https://unpkg.com/gijgo@1.9.11/css/gijgo.min.css" rel="stylesheet" type="text/css" />
<!--editor configuration-->
<script src="~/Scripts/ckeditor.js"></script>

<script type="text/javascript">

    const imagesElement = document.getElementById("images")
    var counter = 0;
    var selected = 0;

    //timepicker configuration
    $('#datepicker').datepicker({
        uiLibrary: 'bootstrap4'
    });

    //editor configuration
    ClassicEditor
        .create(document.querySelector('#editor'))
        .catch(error => {
            console.error(error);
        });

    function radioClick(index) {
        selected = index;
    }

    function newImageButtonHandler(e) {
        imagesElement.innerHTML += (`
            <div class="form-row" id="item`+ counter + `">
                <div class="form-group col-md-7">
                    <input type="file" name="Photos" class="form-control" id="file`+ counter + `" onchange="return fileValidation('file` + counter + `')">
                </div>
                <div class="form-group col-md-5">
                    <span>
                        <input type="radio" name="Primary" id="radio`+ counter + `" class="" value=` + counter + ` onclick="radioClick(` + counter + `)"> მთავარი სურათად ჩვენება
                    </span>
                </div>
            </div>
        `);

        counter++;
        if (selected != -1) {
            var item = document.getElementById("radio" + selected);
            item.checked = true;
        }
    }

    function fileValidation(filename) {
        var fileInput = document.getElementById(filename);
        var filePath = fileInput.value;
        var allowedExtensions = /(\.jpg|\.jpeg|\.png|\.gif)$/i;
        if (!allowedExtensions.exec(filePath)) {
            alert('არასწორია ფაილის ფორმატი');
            fileInput.value = '';
            return false;
        } else {
            //Image preview
            if (fileInput.files && fileInput.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('imagePreview').innerHTML = '<img src="' + e.target.result + '"/>';
                };
                reader.readAsDataURL(fileInput.files[0]);
            }
        }
    }
</script>
